package cn.itcast.p1.string.demo;

public class StringMethodDemo {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		/*
		 * 1、获取
		 * 获取长度
		 *  int length();
		 * 根据位置获取字符
		 * 	char charAt(int index);
		 * 获取第一次/最后一次出现的位置
		 *  int indexOf(int ch);
		 * 获取字符串中的一部分字符串
		 *  String substring(int beginIndex,int endIndex);//包含from不包含end
		 *  2、转换
		 *  	1、转成数组
		 *  		String[] split(String regex);
		 *  	2、字符串变成字符数组
		 *  		Char[] toCharArray()
		 *  	3、字符串转成byte[]
		 *  		byte[] getBytes();
		 *  	4、将字符串转换大小写
		 *  		String toUpperCase();大写
		 *  		String toLowwerCase();
		 *  	5、将字符串中的指定内容进行替换
		 *  		String repleace(char oldch,char newch);
		 *  	6、trim
		 *  	7、将字符创连接
		 *  		String concat(string); //"ab"+"kk"
		 *  	8、
		 *  		valueOf
		 *  3、
		 *  	1、两个字符串内容是否相同？
		 *  		boolean equals(Object obj);
		 *  		boolean equalsIgnoreCase(String str);
		 *  	2、
		 *  		
		 */
		StringMethodDemo_3();
	}

	private static void StringMethodDemo_3() {
		String s = "abc";
		System.out.println(s.equalsIgnoreCase("ABC"));
	}

	private static void StringMethodDemo_2() {
		String s = "张三.李四.王五";
		String [] arr = s.split("\\.");
		
		char[] chs = s.toCharArray();
		for (int i = 0; i < chs.length; i++) {
			System.out.println(chs[i]);
		}
		s = "ab你";
		byte[] bytes = s.getBytes();
		for (int i = 0; i < bytes.length; i++) {
			System.out.println(bytes[i]);
			
		}
		
		System.out.println("Abc".toUpperCase());
		
		System.out.println("java".replace("ja","aj"));
	}

	private static void StringMethodDemo_1() {
		String s = "abcdef";
		System.out.println("index:"+s.indexOf("k"));//判断位置或存在
		System.out.println("substring:"+s.substring(1, 3));
	}
}
